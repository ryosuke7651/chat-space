.chat-side
  .chat-side__header
    .chat-side__header__box
      %h3.name
        = current_user.name
      %ul.list
        %li.list__list-icon
          =link_to new_group_path() do
            = icon('fas', 'edit')
        %li.list__list.icon
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .chat-side__groups
    - current_user.groups.each do |group|
      =link_to group_messages_path(group) do
        .chat-side__groups__group
          .group-name 
            = group.name
          .group-message 
            = group.show_last_message